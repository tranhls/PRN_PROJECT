@{
    ViewData["Title"] = "Edit Subject";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edit Subject</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditSubject" asp-controller="Admin">
                        <input type="hidden" name="Id" value="@ViewBag.subject.Id" />

                        <div class="mb-3">
                            <label for="Name" class="form-label">Subject Name</label>
                            <input type="text" id="Name" name="Name" value="@ViewBag.subject.Name" class="form-control" required placeholder="Enter subject name">
                        </div>

                        <div class="mb-3">
                            <label for="Code" class="form-label">Subject Code</label>
                            <input type="text" id="Code" name="Code" value="@ViewBag.subject.Code" class="form-control" required placeholder="Enter subject code">
                        </div>

                        <div class="mb-3">
                            <label for="Category" class="form-label">Category</label>
                            <select id="Category" name="Category" required>
                                <option value="">-- Select Category --</option> 
                                @foreach (var category in ViewBag.Categories)
                                { 
                                    <option value="@category.Id" selected="@(ViewBag.subject.Category == category.Id ? "selected" : null)">
                                        @category.Name
                                    </option>
                                }
                             </select>

                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ManageSubjects", "Admin")" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
