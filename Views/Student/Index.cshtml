@{
}
<div class="container mt-4">
    <div class="card ">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">My Class</h3>

        </div>
        <div class="card-body">
            <form method="get">
                <div class="d-flex justify-content-between mb-3">
                    <div class="d-flex ">
                        <input type="text" id="searchInput" name="search" class="form-control" placeholder="Search class...">
                        <button class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Class Code</th>
                            <th>Class Name</th>
                            <th>Subject</th>
                            <th>Semester</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MyClass != null && ViewBag.MyClass.Count > 0)
                        {
                            int index = 1;
                            @foreach (var item in ViewBag.MyClass)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td class="fw-bold">@item.Class.Code</td>
                                    <td>@item.Class.Name</td>
                                    <td>@item.Class.SubjectNavigation?.Name ( @item.Class.SubjectNavigation?.Code)</td>
                                    <td>@item.Class.Semester?.Name</td>
                                    <td>
                                        <a asp-controller="Class" asp-action="Detail" asp-route-id="@item.Class.Id" class="btn btn-warning btn-sm">
                                            Detail
                                        </a>
                                        <a asp-action="MyGrade" asp-route-classId="@item.Class.Id" class="btn btn-warning btn-sm">
                                            My Grade
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-danger fw-bold">No classes found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>